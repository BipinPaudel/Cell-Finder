<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.bipin.cellfinder.EmailAuthenticate"
    tools:showIn="@layout/activity_email_authenticate">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/email_authenticate_title"
            android:textSize="@dimen/text_title" />

        <TextView
            android:id="@+id/enter_email_authentication_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="135dp"
            android:text="@string/enter_email_authentication" />

        <EditText
            android:id="@+id/enter_email_authentication_edittext_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/enter_email_authentication_id"
            android:inputType="textEmailAddress" />

        <TextView
            android:id="@+id/enter_password_authentication_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/enter_email_authentication_edittext_id"
            android:text="@string/password_text" />

        <EditText
            android:id="@+id/enter_password_authentication_edittext_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/enter_password_authentication_id"
            android:inputType="textPassword" />

        <Button
            android:id="@+id/email_authentication_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/enter_password_authentication_edittext_id"
            android:text="@string/authenticate_button" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/email_authentication_button"
            android:layout_toRightOf="@id/email_authentication_button"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="60dp"
                android:text="Submitted By: Samir Babu Gharti\n          LMU Id:11069886"

                />
        </LinearLayout>
    </RelativeLayout>
</ScrollView>